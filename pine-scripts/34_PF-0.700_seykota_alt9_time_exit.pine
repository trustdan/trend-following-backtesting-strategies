// ALTERNATIVE 9: Time-Based Exit (Primary Exit Method)
// THEORY: Trends have finite lifespans; exit stale positions after N bars regardless of price action.
// While the baseline has an OPTIONAL time exit, this alternative makes time the PRIMARY exit method,
// with ATR/Donchian stops as backstops only. After a fixed number of bars, the position is closed
// and re-evaluated. This prevents holding "zombie" positions that aren't moving.
// Trade-off: Prevents holding dead positions, forces periodic review, but may exit working trends early.

//@version=6
strategy("Seykota Alt 9: Time Exit Primary v1.0",
     overlay=true,
     initial_capital=100000,
     commission_type=strategy.commission.percent, commission_value=0.005,
     slippage=2,
     default_qty_type=strategy.fixed, default_qty_value=0,
     pyramiding=10,
     max_bars_back=5000)

//================ Inputs
allowLong   = input.bool(true,  "Allow LONGs?")
allowShort  = input.bool(true,  "Allow SHORTs?")

entryLen    = input.int(55,     "Donchian ENTRY lookback",            minval=10)
exitLen     = input.int(10,     "Donchian EXIT lookback (backstop)",  minval=5)
nLen        = input.int(20,     "N = ATR length",                     minval=5)
stopN       = input.float(2.0,  "Initial stop (in N, backstop)",      minval=0.5, step=0.25)
addStepN    = input.float(0.5,  "Add every X * N",                    minval=0.25, step=0.25)
maxUnits    = input.int(4,      "Max units (incl. initial)",          minval=1, maxval=10)
riskPct     = input.float(1.0,  "Risk % of equity PER UNIT",          minval=0.1, maxval=5, step=0.1)

// CHANGED: Time exit is now the PRIMARY method
timeExitBars = input.int(40,    "Time exit bars (PRIMARY)",           minval=5)
reenterDelay = input.int(3,     "Bars to wait before re-entry",       minval=0)
allowReenter = input.bool(true, "Allow re-entry if signal still valid?")

useMarket   = input.bool(false, "Use market regime filter?")
marketSym   = input.symbol("SPY", "Market symbol for regime (if used)")
marketTF    = input.timeframe("D", "Regime timeframe (if used)")
marketLen   = input.int(200,    "Market MA length (if used)",         minval=50)

minVol      = input.int(0,      "Min 20-bar avg volume (chart TF)",   minval=0)
showSignals = input.bool(true,  "Plot signals & stops?")
plotDon     = input.bool(true,  "Plot Donchian bands?")

// Date-range filter
fromDate = input.time(defval=timestamp("2022-01-01T00:00:00"), title="Backtest FROM (yyyy-mm-dd)", confirm=true)
toDate   = input.time(defval=timestamp("2099-12-31T23:59:59"), title="Backtest TO (yyyy-mm-dd)",   confirm=true)
flatAtFrom = input.bool(true, "Force FLAT at range start?")
isRangeStart = (time[1] < fromDate) and (time >= fromDate)
if flatAtFrom and isRangeStart and strategy.position_size != 0
    strategy.close_all(comment="Flat at FROM")

//================ Helpers
sharesForUnit(_equity, _Nentry) =>
    riskDollars   = _equity * (riskPct/100.0)
    perShareRisk  = math.max(stopN * _Nentry, syminfo.mintick)
    math.max(1, math.floor(riskDollars / perShareRisk))

inRange = (time >= fromDate) and (time <= toDate)

//================ Core calcs
N        = ta.atr(nLen)
volMA    = ta.sma(volume, 20)
liqOK    = volMA >= minVol

// Donchian levels
donHi    = ta.highest(high, entryLen)
donLo    = ta.lowest(low,  entryLen)
donHiPrev= donHi[1]
donLoPrev= donLo[1]

exitHiPrev = ta.highest(high, exitLen)[1]
exitLoPrev = ta.lowest(low,  exitLen)[1]

// Market regime (optional)
mClose = request.security(marketSym, marketTF, close)
mMA    = request.security(marketSym, marketTF, ta.sma(close, marketLen))
longRegOK  = not useMarket or (mClose > mMA)
shortRegOK = not useMarket or (mClose < mMA)

//================ Signals
longBreak  = allowLong  and liqOK and longRegOK  and (close > donHiPrev)
shortBreak = allowShort and liqOK and shortRegOK and (close < donLoPrev)

//================ Position state
var float N_entry       = na
var float lastAddLong   = na
var float lastAddShort  = na
var int   units         = 0
var int   barsInPos     = 0
var int   barsSinceExit = 0  // Track delay for re-entry
var int   lastExitBar   = 0

inPos     = strategy.position_size != 0
inLong    = strategy.position_size > 0
inShort   = strategy.position_size < 0

if inPos
    barsInPos += 1
else
    barsInPos := 0
    units     := 0
    lastAddLong  := na
    lastAddShort := na
    N_entry      := na

// Track bars since last exit
if not inPos
    barsSinceExit := bar_index - lastExitBar
else
    barsSinceExit := 0

//================ Entries (with re-entry delay)
canEnterLong  = inRange and not inPos and longBreak  and (barsSinceExit >= reenterDelay)
canEnterShort = inRange and not inPos and shortBreak and (barsSinceExit >= reenterDelay)

if canEnterLong
    N_entry := N
    float sh = sharesForUnit(strategy.equity, N_entry)
    strategy.entry("L", strategy.long, qty=sh)
    units       := 1
    lastAddLong := close

if canEnterShort
    N_entry := N
    float sh = sharesForUnit(strategy.equity, N_entry)
    strategy.entry("S", strategy.short, qty=sh)
    units        := 1
    lastAddShort := close

//================ Add-ons
canAddLong  = inRange and inLong  and units < maxUnits and close >= nz(lastAddLong)  + addStepN * N_entry
canAddShort = inRange and inShort and units < maxUnits and close <= nz(lastAddShort) - addStepN * N_entry

if canAddLong
    float sh = sharesForUnit(strategy.equity, N_entry)
    strategy.entry("L", strategy.long, qty=sh)
    units       += 1
    lastAddLong := close

if canAddShort
    float sh = sharesForUnit(strategy.equity, N_entry)
    strategy.entry("S", strategy.short, qty=sh)
    units        += 1
    lastAddShort := close

//================ Exits (backstop stops)
var float stopL = na
var float stopS = na

if inRange and inLong
    initStopL = strategy.position_avg_price - stopN * N_entry
    stopL     := math.max(initStopL, exitLoPrev)
    strategy.exit("L-EXIT", from_entry="L", stop=stopL)
else
    stopL := na

if inRange and inShort
    initStopS = strategy.position_avg_price + stopN * N_entry
    stopS     := math.min(initStopS, exitHiPrev)
    strategy.exit("S-EXIT", from_entry="S", stop=stopS)
else
    stopS := na

//================ PRIMARY TIME EXIT
timeExitTrig = inRange and inPos and (barsInPos >= timeExitBars)

if timeExitTrig
    if inLong
        strategy.close("L", comment="Time Exit (" + str.tostring(timeExitBars) + " bars)")
        lastExitBar := bar_index
    if inShort
        strategy.close("S", comment="Time Exit (" + str.tostring(timeExitBars) + " bars)")
        lastExitBar := bar_index

//================ Plots
float dHiPlot = plotDon ? donHi : na
float dLoPlot = plotDon ? donLo : na
plot(dHiPlot, "Donchian High", color=color.new(color.blue, 40))
plot(dLoPlot, "Donchian Low",  color=color.new(color.blue, 40))

plotshape(showSignals and canEnterLong,  title="Long Entry",   style=shape.triangleup,   location=location.belowbar, size=size.tiny,  color=color.new(color.green, 0), text="Long")
plotshape(showSignals and canEnterShort, title="Short Entry",  style=shape.triangledown, location=location.abovebar, size=size.tiny,  color=color.new(color.red,   0), text="Short")
plotshape(showSignals and timeExitTrig,  title="Time Exit",    style=shape.xcross,       location=location.absolute, size=size.small, color=color.new(color.orange, 0), text="Time")

plot(showSignals and inLong  ? stopL : na, "Long Stop (Backstop)",  color=color.new(color.red, 50), style=plot.style_linebr, linewidth=1)
plot(showSignals and inShort ? stopS : na, "Short Stop (Backstop)", color=color.new(color.red, 50), style=plot.style_linebr, linewidth=1)

// Visual countdown to time exit
var label countdownLabel = na
if showSignals and inPos and barstate.islast
    barsRemaining = timeExitBars - barsInPos
    labelText = "Time Exit in: " + str.tostring(math.max(0, barsRemaining)) + " bars"
    labelColor = barsRemaining <= 5 ? color.orange : color.blue
    label.delete(countdownLabel)
    countdownLabel := label.new(bar_index, high, labelText, style=label.style_label_down, color=labelColor, textcolor=color.white, size=size.small)

// Info table
var table infoTable = table.new(position.top_right, 2, 4, border_width=1)
if barstate.islast and showSignals
    table.cell(infoTable, 0, 0, "Exit Method:", text_color=color.white, bgcolor=color.gray)
    table.cell(infoTable, 1, 0, "Time (PRIMARY)", text_color=color.white, bgcolor=color.orange)
    table.cell(infoTable, 0, 1, "Max Duration:", text_color=color.white, bgcolor=color.gray)
    table.cell(infoTable, 1, 1, str.tostring(timeExitBars) + " bars", text_color=color.white, bgcolor=color.gray)
    table.cell(infoTable, 0, 2, "Re-entry Delay:", text_color=color.white, bgcolor=color.gray)
    table.cell(infoTable, 1, 2, str.tostring(reenterDelay) + " bars", text_color=color.white, bgcolor=color.gray)
    table.cell(infoTable, 0, 3, "Bars in Pos:", text_color=color.white, bgcolor=color.gray)
    barsColor = barsInPos >= timeExitBars * 0.8 ? color.orange : color.green
    table.cell(infoTable, 1, 3, str.tostring(barsInPos) + "/" + str.tostring(timeExitBars), text_color=color.white, bgcolor=barsColor)
