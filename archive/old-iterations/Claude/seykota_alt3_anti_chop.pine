// ALTERNATIVE 3: Mean Reversion Protection System
// THEORY: Trend following systems suffer in choppy, ranging markets. Use ADX, efficiency ratio,
// and directional movement to only trade when a genuine trend exists. Seykota: "The elements of 
// good trading are: (1) cutting losses, (2) cutting losses, and (3) cutting losses. If you can 
// follow these three rules, you may have a chance." - This version focuses on avoiding bad trades.

//@version=6
strategy("Seykota Alt 3: Anti-Chop Filter v1.0",
     overlay=true,
     initial_capital=100000,
     commission_type=strategy.commission.percent, commission_value=0.005,
     default_qty_type=strategy.fixed, default_qty_value=0,
     pyramiding=10,
     max_bars_back=5000)

//================ Inputs
allowLong   = input.bool(true,  "Allow LONGs?")
allowShort  = input.bool(true,  "Allow SHORTs?")

entryLen    = input.int(55,     "Donchian ENTRY lookback",    minval=10)
exitLen     = input.int(10,     "Donchian EXIT lookback",     minval=5)

// Trend strength filters
useAdx      = input.bool(true,  "Use ADX filter?")
adxLen      = input.int(14,     "ADX length",                 minval=5)
adxThresh   = input.float(25,   "Min ADX threshold",          minval=10, maxval=50, step=5)

useER       = input.bool(true,  "Use Efficiency Ratio filter?")
erLen       = input.int(20,     "ER length",                  minval=5)
erThresh    = input.float(0.3,  "Min ER threshold",           minval=0, maxval=1, step=0.05)

useTrendStr = input.bool(true,  "Use Trend Strength filter?")
trendLen    = input.int(20,     "Trend strength length",      minval=5)
trendThresh = input.float(60,   "Min trend strength %",       minval=0, maxval=100, step=5)

nLen        = input.int(20,     "N = ATR length",             minval=5)
stopN       = input.float(2.0,  "Initial stop (in N)",        minval=0.5, step=0.25)
addStepN    = input.float(0.5,  "Add every X * N",            minval=0.25, step=0.25)
maxUnits    = input.int(4,      "Max units",                  minval=1, maxval=10)
riskPct     = input.float(1.0,  "Risk % per unit",            minval=0.1, maxval=5, step=0.1)

useMarket   = input.bool(false, "Use market regime filter?")
marketSym   = input.symbol("SPY", "Market symbol")
marketTF    = input.timeframe("D", "Regime timeframe")
marketLen   = input.int(200,    "Market MA length",           minval=50)

minVol      = input.int(0,      "Min 20-bar avg volume",      minval=0)
showSignals = input.bool(true,  "Plot signals & stops?")
plotDon     = input.bool(true,  "Plot Donchian bands?")

fromDate = input.time(defval=timestamp("2022-01-01T00:00:00"), title="Backtest FROM")
toDate   = input.time(defval=timestamp("2099-12-31T23:59:59"), title="Backtest TO")

//================ Helpers
sharesForUnit(_equity, _Nentry) =>
    riskDollars   = _equity * (riskPct/100.0)
    perShareRisk  = math.max(stopN * _Nentry, syminfo.mintick)
    math.max(1, math.floor(riskDollars / perShareRisk))

inRange = (time >= fromDate) and (time <= toDate)
flatAtFrom = input.bool(true, "Force FLAT at range start?")
isRangeStart = (time[1] < fromDate) and (time >= fromDate)

if flatAtFrom and isRangeStart and strategy.position_size != 0
    strategy.close_all(comment="Flat at FROM")

//================ Core calcs
N        = ta.atr(nLen)
volMA    = ta.sma(volume, 20)
liqOK    = volMA >= minVol

donHi    = ta.highest(high, entryLen)
donLo    = ta.lowest(low,  entryLen)
donHiPrev= donHi[1]
donLoPrev= donLo[1]

exitHiPrev = ta.highest(high, exitLen)[1]
exitLoPrev = ta.lowest(low,  exitLen)[1]

// Market regime
mClose = request.security(marketSym, marketTF, close)
mMA    = request.security(marketSym, marketTF, ta.sma(close, marketLen))
longRegOK  = not useMarket or (mClose > mMA)
shortRegOK = not useMarket or (mClose < mMA)

//================ ADX Calculation (Directional Movement Index)
[diPlus, diMinus, adx] = ta.dmi(adxLen, adxLen)
adxOK = not useAdx or (adx > adxThresh)

//================ Efficiency Ratio (Kaufman)
// ER = net movement / total movement
priceChange = math.abs(close - close[erLen])
volatility = 0.0
for i = 0 to erLen - 1
    volatility := volatility + math.abs(close[i] - close[i + 1])

efficiencyRatio = volatility > 0 ? priceChange / volatility : 0
erOK = not useER or (efficiencyRatio > erThresh)

//================ Trend Strength (% of bars closing higher/lower)
upBars = 0
for i = 1 to trendLen
    if close[i] > close[i + 1]
        upBars := upBars + 1

trendStrength = (upBars / trendLen) * 100
trendingUp = trendStrength > (50 + trendThresh/2)
trendingDown = trendStrength < (50 - trendThresh/2)
trendStrOK = not useTrendStr or trendingUp or trendingDown

// Combined trend quality filter
trendQualityOK = adxOK and erOK and trendStrOK

//================ Signals
longBreak  = allowLong  and liqOK and longRegOK  and trendQualityOK and (close > donHiPrev)
shortBreak = allowShort and liqOK and shortRegOK and trendQualityOK and (close < donLoPrev)

//================ Position state
var float N_entry       = na
var float lastAddLong   = na
var float lastAddShort  = na
var int   units         = 0

inPos     = strategy.position_size != 0
inLong    = strategy.position_size > 0
inShort   = strategy.position_size < 0

if not inPos
    units        := 0
    lastAddLong  := na
    lastAddShort := na
    N_entry      := na

//================ Entries
if inRange and not inPos and longBreak
    N_entry := N
    float sh = sharesForUnit(strategy.equity, N_entry)
    strategy.entry("L", strategy.long, qty=sh)
    units       := 1
    lastAddLong := close

if inRange and not inPos and shortBreak
    N_entry := N
    float sh = sharesForUnit(strategy.equity, N_entry)
    strategy.entry("S", strategy.short, qty=sh)
    units        := 1
    lastAddShort := close

//================ Add-ons (only in trending conditions)
canAddLong  = inRange and inLong  and units < maxUnits and trendQualityOK and close >= nz(lastAddLong)  + addStepN * N_entry
canAddShort = inRange and inShort and units < maxUnits and trendQualityOK and close <= nz(lastAddShort) - addStepN * N_entry

if canAddLong
    float sh = sharesForUnit(strategy.equity, N_entry)
    strategy.entry("L", strategy.long, qty=sh)
    units       += 1
    lastAddLong := close

if canAddShort
    float sh = sharesForUnit(strategy.equity, N_entry)
    strategy.entry("S", strategy.short, qty=sh)
    units        += 1
    lastAddShort := close

//================ Exits
var float stopL = na
var float stopS = na

if inRange and inLong
    initStopL = strategy.position_avg_price - stopN * N_entry
    stopL     := math.max(initStopL, exitLoPrev)
    strategy.exit("L-EXIT", from_entry="L", stop=stopL)
else
    stopL := na

if inRange and inShort
    initStopS = strategy.position_avg_price + stopN * N_entry
    stopS     := math.min(initStopS, exitHiPrev)
    strategy.exit("S-EXIT", from_entry="S", stop=stopS)
else
    stopS := na

//================ Plots
// Background color for trend quality
trendBgColor = trendQualityOK ? color.new(color.green, 95) : color.new(color.red, 95)
bgcolor(trendBgColor, title="Trend Quality")

float dHiPlot = plotDon ? donHi : na
float dLoPlot = plotDon ? donLo : na
plot(dHiPlot, "Donchian High", color=color.new(color.blue, 40))
plot(dLoPlot, "Donchian Low",  color=color.new(color.blue, 40))

plotshape(showSignals and longBreak,  title="Long",  style=shape.triangleup,   location=location.belowbar, size=size.tiny, color=color.green)
plotshape(showSignals and shortBreak, title="Short", style=shape.triangledown, location=location.abovebar, size=size.tiny, color=color.red)

plot(showSignals and inLong  ? stopL : na, "Long Stop",  color=color.red, style=plot.style_linebr)
plot(showSignals and inShort ? stopS : na, "Short Stop", color=color.red, style=plot.style_linebr)

// Trend quality indicators panel
var table infoTable = table.new(position.top_right, 2, 5, border_width=1)
if barstate.islast and showSignals
    table.cell(infoTable, 0, 0, "Trend Quality:", text_color=color.white, bgcolor=color.gray)
    table.cell(infoTable, 1, 0, trendQualityOK ? "GOOD" : "POOR", text_color=color.white, bgcolor=trendQualityOK ? color.green : color.red)
    
    table.cell(infoTable, 0, 1, "ADX:", text_color=color.white, bgcolor=color.gray)
    adxColor = adxOK ? color.green : color.red
    table.cell(infoTable, 1, 1, str.tostring(adx, "#.#"), text_color=color.white, bgcolor=adxColor)
    
    table.cell(infoTable, 0, 2, "Efficiency:", text_color=color.white, bgcolor=color.gray)
    erColor = erOK ? color.green : color.red
    table.cell(infoTable, 1, 2, str.tostring(efficiencyRatio, "#.##"), text_color=color.white, bgcolor=erColor)
    
    table.cell(infoTable, 0, 3, "Trend %:", text_color=color.white, bgcolor=color.gray)
    trendColor = trendStrOK ? color.green : color.red
    table.cell(infoTable, 1, 3, str.tostring(trendStrength, "#.#") + "%", text_color=color.white, bgcolor=trendColor)
    
    table.cell(infoTable, 0, 4, "Units:", text_color=color.white, bgcolor=color.gray)
    table.cell(infoTable, 1, 4, str.tostring(units), text_color=color.white, bgcolor=color.gray)
